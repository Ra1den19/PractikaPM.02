<Window x:Class="PhoneDirectory.DeleteContact"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PhoneDirectory"
        mc:Ignorable="d"
        Title="DeleteContact" Height="450" Width="800">
    <Grid>
        <DataGrid x:Name="datagrid2" d:ItemsSource="{d:SampleData ItemCount=5}" Margin="10,0,10,264"/>
        <Label Content="Код контакта" HorizontalAlignment="Left" Margin="51,0,0,0" VerticalAlignment="Center" FontSize="13"/>
        <TextBox x:Name="kod" HorizontalAlignment="Left" Margin="144,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" FontSize="13"/>
        <Button x:Name="delete_contact" Content="Удалить контакт" HorizontalAlignment="Left" Margin="51,257,0,0" VerticalAlignment="Top" Height="42" Width="112" Click="delete_contact_Click"/>
        <Button x:Name="show_contacts" Content="Просмотреть контакты" HorizontalAlignment="Left" Margin="168,257,0,0" VerticalAlignment="Top" Height="42" Width="141" Click="show_contacts_Click"/>

    </Grid>
</Window>
